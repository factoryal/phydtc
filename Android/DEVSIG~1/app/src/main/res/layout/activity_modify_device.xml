<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seeun.devsign.AddDeviceActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동종목 : "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="50dp"
        android:text="장치이름 : "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:text="장치선택 : "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:hint="버튼을 눌러서 선택하세요."
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/bt_able"
        android:onClick="listBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="189dp"
        android:layout_height="19dp"
        android:hint="(Device Address)"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="184dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="이름을 수정하세요"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="장치 편집"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="238dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:spinnerMode="dialog"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 선택 :"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/modifyBtn"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="modifyClick"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/DeleteBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type2blue" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="8dp"
        android:onClick="cancelClick"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type2blue" />

    <ImageButton
        android:id="@+id/type1red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:onClick="redDumbClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/dumbbell_50_red" />

    <ImageButton
        android:id="@+id/type1blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="11dp"
        android:background="#FFFFFF"
        android:onClick="blueDumbClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type1red"
        app:srcCompat="@drawable/dumbbell_50_blue" />

    <ImageButton
        android:id="@+id/type2red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:onClick="redBarClick"
        app:layout_constraintLeft_toRightOf="@+id/type1red"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/barbell_red_50" />

    <ImageButton
        android:id="@+id/type2blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="11dp"
        android:background="#FFFFFF"
        android:onClick="blueBarClick"
        app:layout_constraintLeft_toRightOf="@+id/type1blue"
        app:layout_constraintTop_toBottomOf="@+id/type2red"
        app:srcCompat="@drawable/barbell_blue_50" />

    <ImageButton
        android:id="@+id/type3pink"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:onClick="pinkSquatClick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/type2red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/squat_pink_50" />

    <ImageButton
        android:id="@+id/type3yellow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:onClick="yellowSquatClick"
        app:srcCompat="@drawable/squat_yellow_50"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/type3pink"
        app:layout_constraintLeft_toRightOf="@+id/type2blue"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.066" />

    <Button
        android:id="@+id/DeleteBtn"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:onClick="DeleteClick"
        android:text="삭제"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/type2blue" />
</android.support.constraint.ConstraintLayout>
